<log4net>

	<appender name="ErrLogging" type="log4net.Appender.RollingFileAppender">
		<param name="RollingStyle" value="Date" />
		<param name="File" value="log/" />
		<param name="DatePattern" value='"ErrLogging"yyyyMMdd".log"' />
		<param name="StaticLogFileName" value="false" />
		<param name="AppendToFile" value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%-5level %date{yyyy/MM/dd HH:mm:ss, fff} [%thread] %class %method - %message%newline" />
		</layout>
	</appender>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="ErrLogging" />
	</root>
</log4net>